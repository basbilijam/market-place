extends ./application.pug
block content
  h3.center.header.text_h2 Wrong username or password please try again
  div(class="row")
    form.light(class="col s6" action="/login" method="post")
      div(class="row")
        div(class="cardcontainer")
          div(class="col s6")
            label(for="username") Username
            input(placeholder="Username" name="username" id="username" type="text" class="validate")
            label(for="password") Password
            input(placeholder="Password" name="password" id="username" type="password" class="validate")
            button(class="btn" type="submit" name="action") Submit
