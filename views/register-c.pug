extends ./application.pug
block content
  div(class="row")
  form.light(id="login" enctype="multipart/form-data" class="col s6 z-depth-1 grey lighten-4 row" action="/register" method="post")
    div(class="row")
      div(class="col s6")
        label(for="email") Email
        input(placeholder="Your e-mail" name="email" id="email" type="email" class="validate")
        label(for="username") Username
        input(placeholder="your name" name="username" id="username" type="text" class="validate")
        label(for="password") Password
        input(placeholder="Your password" name="password" id="password" type="password" class="validate")
        label(for="companyname") Company name
        input(placeholder="Your company name" name="company" id="company" type="text" class="validate")
        label(for="location") Location
        input(placeholder="Your location" name="location" id="location" type="text" class="validate")
        label(for="postalcode") Postal code
        input(placeholder="Enter postal code, e.g. 1234AB" name="postalcode" id="postalcode" type="text" class="validate" data-length="6")
        label(for="type") Type of cuisine
        input(placeholder="Type of cuisine" name="cuisine" id="cuisine" type="text" class="validate")
        .file-field.input-field
          .btn
            span Upload picture
            input(type='file' name="profile")
          .file-path-wrapper
            input.file-path.validate(type='text')

      button(class="btn waves-effect waves-light" type="submit" name="action") Submit
        i(class="material-icons right")
