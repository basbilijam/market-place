extends ./application.pug
block content
  h3 Register as a new user!

  div(class="row")
  form(id="login" class="col s6 z-depth-1 grey lighten-4 row" action="/register" method="post")
    div(class="row")
      div(class="col s6")
        label(for="email") Email
        input(placeholder="Your e-mail" name="email" id="email" type="email" class="validate")
        label(for="username") Username
        input(placeholder="your name" name="username" id="username" type="text" class="validate")
        label(for="password") Password
        input(placeholder="Your password" name="password" id="password" type="password" class="validate")
        label(for="filled-in-box") 
        input(type="checkbox" class="filled-in" id="filled-in-box" checked="checked")
        if checked
          label(for="company") Company name
          input(placeholder="Your company name" name="company" id="company" type="text" class="validate")
          label(for="location") Location
          input(placeholder="Your location" name="location" id="location" type="location" class="validate")
          label(for="type") Type
          input(placeholder="Type of cuisine" name="type" id="type" type="text" class="validate")
    button(class="btn waves-effect waves-light" type="submit" name="action") Submit
      i(class="material-icons right")
